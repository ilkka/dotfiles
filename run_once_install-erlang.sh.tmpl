{{ if eq .chezmoi.os "linux" -}}
#!/usr/bin/env bash
set -euo pipefail
if command -v apt-get &>/dev/null; then
  sudo apt-get update
  sudo apt-get -y install erlang
elif command -v pacman &>/dev/null; then
  sudo pacman -Syu erlang
else
  echo "uh-oh, don't know how to install erlang :(" >&2
fi
{{ end }}
