// Place your settings in this file to overwrite the default settings
{
  // internal
  "editor.fontFamily": "Futurice, 'Fira Code', 'Input Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "terminal.integrated.fontFamily": "Futurice, 'Fira Code'",
  "terminal.integrated.fontLigatures": true,
  "files.trimTrailingWhitespace": true,

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/elm-stuff": true
  },

  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": true,
  "editor.minimap.enabled": true,
  "diffEditor.renderSideBySide": false,

  "window.zoomLevel": 1,

  "files.associations": {"Bakefile":"Elixir","*.flow":"javascript","*.vue":"vue"},
  "files.autoSave": "onFocusChange",

  "gitlens.insiders": true,
  "gitlens.advanced.git": "/usr/local/bin/git",
  "projectManager.showProjectNameInStatusBar": true,
  "projectManager.vscode.baseFolders": [
    "/home/ilkka/src",
    "/Users/ilau/src",
    "/Users/ilau/gocode"
  ],
  "projectManager.git.baseFolders": [
    "/home/ilkka/src",
    "/Users/ilau/src",
    "/Users/ilau/gocode"
  ],

  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.shell.osx": "/usr/local/bin/fish",
  "workbench.iconTheme": "vs-seti",

  // javascript
  "javascript.implicitProjectConfig.checkJs": true,

  // elixir
  //"languageServerCredo.executablePath": "/usr/local/bin/mix",

  // elm
  //"elm.formatOnSave": true,

  // purescript
  "[purescript]": {

  },

  // python
  "[python]": {

  },
  "python.pythonPath": "/usr/local/bin/python",
  "python.linting.pylintPath": "/usr/local/bin/pylint",
  "python.linting.enabled": true,
  "python.linting.pep8Path": "/usr/local/bin/pep8",
  "python.linting.pep8Enabled": true,
  "python.linting.flake8Path": "/usr/local/bin/flake8",
  "python.linting.flake8Enabled": true,
  "python.formatting.yapfPath": "/usr/local/bin/yapf",
  "python.venvPath": "~/.virtualenvs"
}
